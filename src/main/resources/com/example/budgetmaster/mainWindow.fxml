<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml"
         fx:controller="com.example.budgetmaster.MainWindowController"
         prefWidth="400" prefHeight="300">
    <tabs>
        <Tab text="Expenses" closable="false">
            <content>
                <VBox>
                    <Button text="Add Expenses" onAction="#openExpensesPopup" />
                    <ListView fx:id="expensesListView" />
                </VBox>
            </content>
        </Tab>
        <Tab text="Income" closable="false">
            <content>
                <VBox>
                    <Button text="Add Income" onAction="#openIncomePopup" />
                    <ListView fx:id="incomeListView" />
                </VBox>
            </content>
        </Tab>
    </tabs>
</TabPane>
